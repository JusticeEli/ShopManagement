<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.justice.shopmanagement">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
<uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_shopping_cart"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_shopping_cart"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".alldata.ApplicationClass"
        android:usesCleartextTraffic="true"
        >


        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AddGoodsActivity" />
        <activity android:name=".out_of_stock.OutOfStockActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".charges.ChargesActivity"
            android:launchMode="singleTop"/>
    </application>

</manifest>